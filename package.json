{
  "name": "pcssmdts",
  "version": "0.1.2",
  "description": "Generate d.ts files for PostCSS modules",
  "main": "dist/index.js",
  "bin": {
    "pcssmdts": "dist/index.js"
  },
  "type": "commonjs",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "author": "Vasyl Semilyak <vasyl.semilyak@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unknown4unnamed/pcssmdts.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "bugs": {
    "url": "https://github.com/unknown4unnamed/pcssmdts/issues"
  },
  "homepage": "https://github.com/unknown4unnamed/pcssmdts#readme",
  "engines": {
    "node": ">=16.19.1 <21"
  },
  "ntl": {
    "runner": "pnpm"
  },
  "keywords": [
    "PostCSS",
    "config",
    "css-modules",
    "typescript"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "tsc -p . -w",
    "build": "rimraf ./dist && tsup && chmod +x dist/index.js",
    "lint:ci": "eslint \"src/**/*.ts\"",
    "types:ci": "tsc --noEmit",
    "test": "pnpm build && pnpm test:unit && pnpm test:e2e",
    "test:unit": "vitest run src/",
    "test:e2e": "rimraf \"./e2e/fixtures/styles/*.d.ts\" && vitest run e2e/index.test.ts --no-threads",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ci": "pnpm build && pnpm test:coverage",
    "release": "semantic-release",
    "prepublishOnly": "pnpm build"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "fast-glob": "^3.3.0",
    "fs-extra": "^10.1.0",
    "postcss": "^8.4.14",
    "postcss-load-config": "^4.0.2",
    "typed-css-modules": "^0.7.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^16.18.68",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/coverage-v8": "^0.32.4",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "postcss-modules": "^6.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.5",
    "semantic-release": "^19.0.5",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "tailwindcss": "^3.4.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^6.7.0",
    "typescript": "^4.9.5",
    "vitest": "^0.32.4"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es2022": true
    },
    "plugins": [
      "@typescript-eslint",
      "import",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:prettier/recommended"
    ],
    "settings": {
      "import/resolver": {
        "typescript": {
          "project": "./tsconfig.json",
          "alwaysTryTypes": true
        },
        "node": true
      }
    },
    "rules": {
      "prettier/prettier": "error",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ],
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc"
          }
        }
      ]
    }
  }
}
